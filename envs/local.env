# OttoChain Local Development Environment
# Copy to .env in repo root: cp envs/local.env .env

ENVIRONMENT=local

# ===== Database =====
POSTGRES_USER=ottochain
POSTGRES_PASSWORD=ottochain-local-dev
POSTGRES_DB=ottochain
POSTGRES_PORT=5432

# ===== Redis =====
REDIS_PORT=6379

# ===== Metagraph (local cluster) =====
ML0_URL=http://host.docker.internal:9200
DL1_URL=http://host.docker.internal:9400
GL0_URLS=http://host.docker.internal:9000
ML0_URLS=http://host.docker.internal:9200
DL1_URLS=http://host.docker.internal:9400

# ===== Services =====
GATEWAY_PORT=4000
BRIDGE_PORT=3030
INDEXER_PORT=3031
MONITOR_PORT=3032

# ===== Explorer =====
EXPLORER_PORT=8080
EXPLORER_API_URL=http://localhost:4000
EXPLORER_WS_URL=ws://localhost:4000
EXPLORER_BRIDGE_URL=http://localhost:3030

# ===== Monitoring =====
PROMETHEUS_PORT=9090
ALERTMANAGER_PORT=9093
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ===== Traffic Generator =====
TRAFFIC_AGENT_COUNT=10
TRAFFIC_TPS=1
