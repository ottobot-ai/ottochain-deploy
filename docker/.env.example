# OttoChain Docker Configuration
# Copy to .env and customize for each node

# ===================
# Common Settings
# ===================
CL_PASSWORD=your-keystore-password
TESSELLATION_VERSION=v4.0.0-rc.2
METAGRAPH_VERSION=latest

# Metagraph identifier (from GL0 genesis)
METAGRAPH_ID=DAG7Z4s8zUqcNt4YSSqxagCChyjkmgugTvtiDoET

# ===================
# Node Identity
# ===================
# This node's public IP
NODE_IP=5.78.90.207

# ===================
# Genesis Node Info (Node 1)
# ===================
# The genesis node runs first and others join it
GL0_GENESIS_HOST=5.78.90.207
GL0_GENESIS_ID=abc123...  # Peer ID of genesis node (from keytool show-id)

# For ML0/CL1/DL1, usually same as GL0 genesis
ML0_GENESIS_HOST=5.78.90.207
ML0_GENESIS_ID=abc123...

# ===================
# Node Role (Genesis vs Join)
# ===================
# Genesis node (node1): set *_GENESIS=true, *_JOIN=false
# Joining nodes (node2, node3): set *_GENESIS=false, *_JOIN=true

# Global L0
GL0_GENESIS=false
GL0_JOIN=false
GL0_JOIN_DELAY=0

# Global L1
GL1_GENESIS=false
GL1_JOIN=false
GL1_JOIN_DELAY=45

# Metagraph L0
ML0_GENESIS=false
ML0_JOIN=false
ML0_JOIN_DELAY=60
ML0_GENERATE_GENESIS=  # Set to "true" on genesis node first run

# Currency L1
CL1_GENESIS=false
CL1_JOIN=false
CL1_JOIN_DELAY=90

# Data L1
DL1_GENESIS=false
DL1_JOIN=false
DL1_JOIN_DELAY=90

# ===================
# Java Options
# ===================
CL_DOCKER_JAVA_OPTS=-Xmx4g -Xms2g
